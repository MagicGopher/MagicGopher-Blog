{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "jsx": "preserve",
      "noLib": false,
      "sourceMap": true,
      "lib": ["esnext", "dom"],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["vite/client"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "src/**/*.d.ts",
      "src/.vitepress/**/*.ts",
      "src/.vitepress/**/*.d.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }